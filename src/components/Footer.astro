---
import Container from "./Container.astro";
import { SOCIAL_LINKS } from "../consts";
import childProcess from "child_process";

const hash = childProcess
  .execSync("git rev-parse --short HEAD")
  .toString()
  .trim();
---

<footer class="bg-stone-50 border-t border-stone-200/60 mt-16">
  <Container>
    <div class="py-8 flex flex-col items-center gap-4">
      <div class="flex items-center gap-3">
        {SOCIAL_LINKS.map((link) => (
          <a
            href={link.url}
            rel="noopener noreferrer"
            target="_blank"
            class="text-stone-400 hover:text-amber-600 transition-colors duration-200"
          >
            {link.name}
          </a>
        ))}
      </div>
      <div class="text-sm text-stone-400">
        © {new Date().getFullYear()} Nicky Semenza
        <span class="mx-2">·</span>
        <a
          href="https://github.com/nickysemenza/nickysemenza.com"
          rel="noopener noreferrer"
          target="_blank"
          class="hover:text-amber-600 transition-colors duration-200"
        >
          {hash}
        </a>
      </div>
    </div>
  </Container>
</footer>
