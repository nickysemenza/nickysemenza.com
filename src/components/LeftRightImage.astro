---
import { Image } from 'astro:assets';

interface Props {
  images: ImageMetadata[];
  cols?: number;
}

const { images, cols = 2 } = Astro.props;
---

<div class={`grid ${cols === 2 ? 'grid-cols-2' : 'grid-cols-3'} gap-3`}>
  {
    images.map((image, index) => (
      <Image src={image} alt={`Image ${index + 1} of ${images.length}`} />
    ))
  }
</div>
