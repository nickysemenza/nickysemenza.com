---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SOCIAL_LINKS } from "../consts";
import { Icon } from "astro-icon/components";
---

<header class="bg-white shadow-md border-b border-gray-200 sticky top-0 z-10">
  <nav class="flex justify-between items-center max-w-6xl mx-auto px-4 py-3">
    <h2 class="font-bold text-xl"><a href="/" class="hover:text-blue-600 transition-colors">{SITE_TITLE}</a></h2>
    <div class="internal-links space-x-4">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="flex space-x-3">
      {SOCIAL_LINKS.map((link) => (
        <a href={link.url} target="_blank" class="text-gray-700 hover:text-gray-900 transition-colors">
          <span class="sr-only">{link.name}</span>
          <Icon name={link.icon} size="24" />
        </a>
      ))}
    </div>
  </nav>
</header>
